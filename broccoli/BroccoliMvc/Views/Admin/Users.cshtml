@{
    ViewBag.Title = "Пользователи системы";
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
}
@model BroccoliTrade.Web.BroccoliMvc.Models.Admin.UsersListModel

<div class="banner small">
    <div class="action">
        <font>Пользователи</font>
    </div>
</div>

<div class="center-content users">
    <table class="user-list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>ФИО</th>
                <th>Телефон</th>
                <th>Никнейм</th>
                <th>Дата регистрации</th>
                <th>Дата рождения</th>
                <th>Город</th>
                <th>Откуда (баннер)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.Name</td>
                    <td>@user.Phone</td>
                    <td>@user.Nickname</td>
                    <td style="text-align: center">@user.RegisterDate</td>
                    <td style="text-align: center">@user.BirthDay.ToShortDateString()</td>
                    <td>@user.City</td>
                    <td style="text-align: center">@user.From</td>
                </tr>
            }
        </tbody>
    </table>
    <br/>
    <p><strong>Всего пользователей:</strong>&nbsp;@Model.users.Count()</p>
</div>