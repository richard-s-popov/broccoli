        <h6>Поля помеченные * обязательны для заполнения.</h6>
        <br />
        @using (Html.BeginForm("FinishRegister", "Account", FormMethod.Post, new { @id = "form" }))
        {
            <table>
                <tr class="bad">
                    <td class="labels">
                        @Html.Label("Имя и фамилия *")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Name, new { @id = "name" })
                    </td>
                </tr>
                <tr>
                    <td class="labels">
                        @Html.Label("Ник")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Nickname, new { @id = "nickname" })
                    </td>
                </tr>
                <tr class="bad">
                    <td class="labels">
                        @Html.Label("Email *")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Email, new { @id = "email" })
                    </td>
                </tr>
                <tr>
                    <td class="labels">
                        @Html.Label("Номер сотового")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Phone, new { @id = "phone" })
                    </td>
                </tr>
                <tr class="bad">
                    <td class="labels">
                        @Html.Label("Страна")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Country, new { @id = "country" })
                    </td>
                </tr>
                <tr>
                    <td class="labels">
                        @Html.Label("Город")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.City, new { @id = "city" })
                    </td>
                </tr>
                <tr class="bad">
                    <td class="labels">
                        @Html.Label("Дата рождения *")
                    </td>
                    <td>
                        @Html.DropDownList("Day", (IEnumerable<SelectListItem>)ViewBag.Days)
                        @Html.DropDownList("Month", (IEnumerable<SelectListItem>)ViewBag.Months)
                        @Html.DropDownList("Year", (IEnumerable<SelectListItem>)ViewBag.Years)
                        @Html.HiddenFor(m => m.BirthDay, new { @id = "birthday" })
                    </td>
                </tr>
                <tr>
                    <td class="labels">
                        @Html.Label("Пароль *")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Password, new { @id = "password", @type = "password" })
                    </td>
                </tr>
                <tr class="bad">
                    <td class="labels">
                        @Html.Label("Повторите пароль *")
                    </td>
                    <td>
                        @Html.TextBox("confirmPassword", null, new { @type = "password" })
                    </td>
                </tr>
            </table>
