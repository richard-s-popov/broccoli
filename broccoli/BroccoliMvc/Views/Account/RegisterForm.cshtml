@model BroccoliTrade.Web.BroccoliMvc.Models.Account.UserProfilePoco

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
}

@section head
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Register/register.form.js")"></script>
}

<div class="banner small">
    <div class="action">
        <font>Регистрация</font>
    </div>
</div>
<img id="srcBtnOk" src="@Url.Content("~/Content/img/button_ok_7852.png")" style="display: none;" />
