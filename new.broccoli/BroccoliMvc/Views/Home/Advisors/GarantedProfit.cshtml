<script type="text/javascript">
	var chartData = [];
	
	function plot() {
	    $.getJSON('@Url.Content("~/Content/advisors/GarantedProfit/5years.json")', function (data) {
	        // Create the chart
	        $('#container').highcharts('StockChart', {
	            chart: {
	                renderTo: 'container',
	                animation: true
	            },

	            title: {
	                text: 'Подробный график работы за 5 лет'
	            },

	            colors: [
                    '#21ad00',
                    '#AA4643',
                    '#89A54E',
                    '#80699B',
                    '#3D96AE',
                    '#DB843D',
                    '#92A8CD',
                    '#A47D7C',
                    '#B5CA92'
	            ],
	            
                yAxis: {
                    min: 0,
                    minorGridLineColor: '#F0F0F0',
                    minorTickInterval: 'auto',
                    title: {
                        text: 'Баланс (USD)'
                    }
                },
	            
                scrollbar: {
                    liveRedraw: false
                },
	            
	            rangeSelector: {
	                buttons: [{
	                    type: 'month',
	                    count: 1,
	                    text: '1м'
	                }, {
	                    type: 'month',
	                    count: 3,
	                    text: '3м'
	                }, {
	                    type: 'month',
	                    count: 6,
	                    text: '6м'
	                }, {
	                    type: 'year',
	                    count: 1,
	                    text: '1г'
	                }, {
	                    type: 'all',
	                    text: 'Все'
	                }],
	                inputEnabled: false, // it supports only days
	                selected: 4 // all
	            },
	            
	            tooltip: {
	                valueDecimals: 2,
	                valueSuffix: '$',
	                animation: true
	            },

	            series: [{
	                name: 'Баланс',
	                data: data,
	                tooltip: {
	                    valueDecimals: 2
	                }
	            }]
	        });
	    });
	};
	
	function getDate(dateStr) {
		var arr = dateStr.replace('.', '-').replace('.', '-').replace(' ', '-').replace(':', '-').split('-');
		
		return date = new Date(arr[0], (arr[1] - 1), arr[2], arr[3], arr[4]);
	}
	
	function ToArrayForChart() {
		var i = 1;
		var balance = 9968.20;
		
		console.log($('#data tr').size());
		
		$('#data tr').each(function () { 
			if (i != 1) {
				if ($(this).children('td').eq(9).html()) {
					balance = parseFloat($(this).children('td').eq(9).html());
				}
				chartData.push([getDate($(this).children('.msdate').html()).getTime(), balance]);
			}
			i++;
		})
	}
	
	$(document).ready(function () {
		// ToArrayForChart();
		plot();
	});
	
</script>