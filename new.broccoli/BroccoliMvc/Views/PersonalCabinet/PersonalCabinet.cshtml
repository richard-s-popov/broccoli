        <h4>Если Вы планируете проинвестировать от 1 миллиона рублей, пожалуйста, свяжитесь с нами через службу поддержки или форму обратной связи и мы предоставим Вам особые условия инвестирования.</h4>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#small').spinner({
            step: 100,
            min: 100,
            max: 1500,
            start: 1000
        }).on('input', function () {
            var val = this.value,
                $this = $(this),
                max = $this.spinner('option', 'max'),
                min = $this.spinner('option', 'min');
            if (!val.match(/^\d+$/)) val = 0; //we want only number, no alpha
            this.value = val > max ? max : val < min ? min : val;
        });

        $('#medium').spinner({
            step: 100,
            min: 1500,
            max: 3000,
            start: 2000
        }).on('input', function () {
            var val = this.value,
                $this = $(this),
                max = $this.spinner('option', 'max'),
                min = $this.spinner('option', 'min');
            if (!val.match(/^\d+$/)) val = 0; //we want only number, no alpha
            this.value = val > max ? max : val < min ? min : val;
        });

        $('#large').spinner({
            step: 100,
            min: 3000,
            start: 5000
        }).on('input', function () {
            var val = this.value,
                $this = $(this),
                max = $this.spinner('option', 'max'),
                min = $this.spinner('option', 'min');
            if (!val.match(/^\d+$/)) val = 0; //we want only number, no alpha
            this.value = val > max ? max : val < min ? min : val;
        });

        $('.pamm-offer-table tbody td:not(.broker-column)').mouseenter(function () {
            var index = $(this).index();

            $('.pamm-offer-table tbody tr').each(function () {
                $('td', this).eq(index).css('background', '#FFF5E5');
            });
        }).mouseleave(function () {
            var index = $(this).index();

            $('.pamm-offer-table tbody tr').each(function () {
                $('td', this).eq(index).css('background', '#F4F5F7');
            });
        });

        $('.small-container .ui-icon.ui-icon-triangle-1-n').click(CalcSmall);
        $('.small-container .ui-icon.ui-icon-triangle-1-s').click(CalcSmall);
        $('.small-container .ui-spinner-input').change(CalcSmall);
        $('.small-container .ui-spinner-input').keyup(CalcSmall);

        $('.medium-container .ui-icon.ui-icon-triangle-1-n').click(CalcMedium);
        $('.medium-container .ui-icon.ui-icon-triangle-1-s').click(CalcMedium);
        $('.medium-container .ui-spinner-input').change(CalcMedium);
        $('.medium-container .ui-spinner-input').keyup(CalcMedium);

        $('.large-container .ui-icon.ui-icon-triangle-1-n').click(CalcLarge);
        $('.large-container .ui-icon.ui-icon-triangle-1-s').click(CalcLarge);
        $('.large-container .ui-spinner-input').change(CalcLarge);
        $('.large-container .ui-spinner-input').keyup(CalcLarge);

        CalcSmall();
        CalcMedium();
        CalcLarge();
    });

    function CalcSmall()
    {
        var value = $('#small').spinner('value');

        $('#small-forexinn').html(Math.round(value * 0.33) + '$ <span class="percent">(33%)</span>');
        $('#small-mmcis').html(Math.round(value * 0.33) + '$ <span class="percent">(33%)</span>');
        $('#small-panteon').html(Math.round(value * 0.33) + '$ <span class="percent">(33%)</span>');
    }

    function CalcMedium() {
        var value = $('#medium').spinner('value');

        $('#medium-forexinn').html(Math.round(value * 0.25) + '$ <span class="percent">(25%)</span>');
        $('#medium-fxtrend').html(Math.round(value * 0.25) + '$ <span class="percent">(25%)</span>');
        $('#medium-mmcis').html(Math.round(value * 0.25) + '$ <span class="percent">(25%)</span>');
        $('#medium-panteon').html(Math.round(value * 0.25) + '$ <span class="percent">(25%)</span>');
    }

    function CalcLarge() {
        var value = $('#large').spinner('value');

        $('#large-forexinn').html(Math.round(value * 0.25) + '$ <span class="percent">(25%)</span>');
        $('#large-fxtrend').html(Math.round(value * 0.35) + '$ <span class="percent">(35%)</span>');
        $('#large-mmcis').html(Math.round(value * 0.15) + '$ <span class="percent">(15%)</span>');
        $('#large-panteon').html(Math.round(value * 0.25) + '$ <span class="percent">(25%)</span>');
    }
</script>